package "stabilitytest"

import "nova/standard/thread/UncaughtExceptionHandler"
import "nova/standard/thread/Thread"

public class StabilityExceptionHandler extends UncaughtExceptionHandler
{
	StabilityTest program
	
	public construct(StabilityTest program)
	{
		this.program = program
	}
	
	public uncaughtException(Thread thread, Exception exception)
	{
		program.fail()
	}
}