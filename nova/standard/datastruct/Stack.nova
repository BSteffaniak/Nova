package "nova/standard/datastruct"

public class Stack<E>
{
	visible Int size
	
	ListNode<E> top
	
	public push(E data)
	{
		ListNode<E> node = new ListNode<E>(data)
		
		node.next = top
		top       = node
		
		size++
	}
	
	public pop() -> E
	{
		if (isEmpty())
		{
			throw new EmptyStackException()
		}
		
		E data = top.data
		
		top = top.next
		
		size--
		
		return data
	}
	
	public isEmpty() -> Bool
	{
		return size <= 0
	}
}